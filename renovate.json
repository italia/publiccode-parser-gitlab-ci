{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^publiccode-validation\\.yml$/"],
      "matchStrings": [
        "name:\\s*(?<depName>[\\w./-]+):(?<currentValue>[\\w.-]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
